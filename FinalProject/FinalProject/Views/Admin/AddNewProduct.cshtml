@model ProductViewModel

@{
    ViewData["Title"] = "AddNewProduct";
}

<h1>AddNewProduct</h1>

<h4>ProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productUrl" class="control-label"></label>
                <input asp-for="productUrl" class="form-control" />
                <span asp-validation-for="productUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
               @* <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />*@
                <select asp-for="CategoryId" asp-items="ViewBag.Employees">
                    <option value="0">Bir Kategori Seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
