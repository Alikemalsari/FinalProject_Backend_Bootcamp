@model ProductViewModel

@{
    ViewData["Title"] = "";
}


<h1>ModifyListItem</h1>

<h4>MyList</h4>
<hr />
<div class="row">

    <div class="col-md-4">
        <form asp-action="EditProduct">
            <div class="form-group">
                @*<label  class="control-label"></label>*@
                <input asp-for="Name" class="form-control" value=@Model.Name />
            </div>
            <div class="form-group">
                @*<label  class="control-label"></label>*@
                <input asp-for="productUrl" class="form-control" value=@Model.productUrl />
            </div>
            <div class="form-group">
                
                <img asp-for="productUrl" src=@Model.productUrl alt="" height=100 width=100 />
            </div>
            <div class="form-group" hidden>
                <label @*asp-for="Quantity"*@ class="control-label"></label>
                <input asp-for="Id" class="form-control" value=@Model.Id />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
