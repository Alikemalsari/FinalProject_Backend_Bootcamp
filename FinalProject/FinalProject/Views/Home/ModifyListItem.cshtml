@model EditMyListItemViewModel

@{
    ViewData["Title"] = "ModifyListItem";
}

<h1>ModifyListItem</h1>

<h4>MyList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModifyListItem">
                <div class="form-group">
                    @*<label  class="control-label"></label>*@
                    <input asp-for="Name" class="form-control" value=@Model.Name disabled />
                </div>
                <div class="form-group">
                    <label @*asp-for="Quantity"*@ class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" value=@Model.Quantity />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
